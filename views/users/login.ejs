<% layout('layouts/boilerplate') %>
<h1>Login</h1>
<form action="/login" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" name="username" id="loginUsername" placeholder="username" required autofocus>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" name="password" id="loginPassword" placeholder="password" required>
    </div>
    <button class="btn btn-success">Login</button>
</form>