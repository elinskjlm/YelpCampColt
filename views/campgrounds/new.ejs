<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Add a new camp ground â›º</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Name</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">&#8362;</span>
                        <input type="number" class="form-control" name="campground[price]" id="price" placeholder="Price"
                            aria-label="Amount (to the nearest ILS)" required>
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <input type="file" name="image" multiple>
                </div> -->
                <div class="mb-3">
                    <label for="image" class="form-label">Add images</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label><br>
                    <textarea class="form-control" name="campground[description]" id="description" rows="4" cols="50"
                        placeholder="Description" required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="city">City</label>
                    <input class="form-control" type="text" name="campground[city]" id="city" placeholder="City" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="state">State</label>
                    <input class="form-control" type="text" name="campground[state]" id="state" placeholder="State" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add new</button>
                </div>
            </form>
        </div>
    </div>