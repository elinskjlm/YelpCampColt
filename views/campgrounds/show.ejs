<% layout('layouts/boilerplate') %>

    <h1>
        <%= campground.title %>
    </h1>
    <img src=<%= campground.image %> alt="campground image">
    <ul>
        <li>Image URL: <%= campground.image %>
        </li>
        <li>Price: <%= campground.price %>
        </li>
        <li>City: <%= campground.city %>
        </li>
        <li>State: <%= campground.state %>
        </li>
        <li>Description: <%= campground.description %>
        </li>
        <li>Id: <%= campground._id %>
        </li>
    </ul>

    <a href="/campgrounds/<%= campground._id %>/edit">Edit 🖍️</a>
    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
        <button>Delete 🗑️</button>
    </form>
    <a href="/campgrounds">Back to main 🏠</a>